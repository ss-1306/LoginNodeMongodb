extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='fname') First Name :
            input#fname.form-control(type='text', placeholder='First Name' name='fname')
            |<br/><br/>

            div.form-group
              label(for='lname') Last Name :
              input#lname.form-control(type='text', placeholder='Last Name' name='lname')
              |<br/><br/>

          div.form-group
            label(for='email') Email :
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
            |<br/><br/>

          div.form-group
            label(for='phoneNumber') Phone Number :
            input#phoneNumber.form-control(type='number', placeholder='Phone Number' name='phoneNumber')
            |<br/><br/>

            div.form-group
              label(for='dob') Date of Birth :
              input#phoneNumber.form-control(type='text', placeholder='Date Of Birth' name='dob')
              |<br/><br/>

          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password',placeholder='password')
            |<br/><br/>

          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword', placeholder='Confirm Password')
            |<br/><br/>
          button.btn.btn-primary(type='submit') Sign up
